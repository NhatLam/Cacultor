<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:background="#000022"
        android:orientation="vertical"
        android:gravity="right"
        android:paddingTop="100dp"

        >
        <TextView
            android:id="@+id/tv_bieuthuc"
            android:textColor="#777777"
            android:autoSizeTextType="uniform"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:textSize="20sp"

            />
        <TextView
            android:id="@+id/tv_ketqua"
            android:textColor="#FFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:autoSizeTextType="uniform"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_congtru"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="+_"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_phantram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="%"
            android:textSize="30sp" />

        <Button
            android:background="#FF9933"
            android:textColor="#FFFF"
            android:id="@+id/btn_chia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="31dp"
            android:text="/"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:background="#FF9933"
            android:textColor="#FFFF"
            android:id="@+id/btn_nhan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="31dp"
            android:text="X"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_tru"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="31dp"
            android:text="-"
            android:background="#FF9933"
            android:textColor="#FFFF"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_cong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="31dp"
            android:text="+"
            android:background="#FF9933"
            android:textColor="#FFFF"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:padding="31dp"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="#FFFF"
            android:padding="31dp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_cham"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:background="#FFFF"
            android:padding="31dp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_bang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF9933"
            android:textColor="#FFFF"
            android:padding="31dp"
            android:text="="
            android:textSize="30sp" />

    </LinearLayout>


</LinearLayout>